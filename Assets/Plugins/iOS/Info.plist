<!-- Assets/Plugins/iOS/Info.plist -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <!-- Kamera İzni -->
        <key>NSCameraUsageDescription</key>
        <string>AR Memory Garden, anılarınızı artırılmış gerçeklik ile yerleştirmek için kamera erişimine ihtiyaç duyar.</string>

        <!-- Mikrofon İzni -->
        <key>NSMicrophoneUsageDescription</key>
        <string>Sesli anı mesajları kaydetmek için mikrofon erişimine ihtiyaç duyar.</string>

        <!-- Fotoğraf Kütüphanesi (Ekleme) -->
        <key>NSPhotoLibraryAddUsageDescription</key>
        <string>Seçtiğiniz fotoğrafları anılarınıza eklemek için galeri erişimine ihtiyaç duyar.</string>

        <!-- Fotoğraf Kütüphanesi (Okuma) -->
        <key>NSPhotoLibraryUsageDescription</key>
        <string>Galerinizden fotoğraf seçmenize izin verir.</string>

        <!-- ARKit Gereksinimi -->
        <key>UIRequiredDeviceCapabilities</key>
        <array>
            <string>arkit</string>
        </array>

        <!-- Background Modes (opsiyonel, location tracking için) -->
        <key>UIBackgroundModes</key>
        <array>
            <string>location</string>
        </array>
    </dict>
</plist>